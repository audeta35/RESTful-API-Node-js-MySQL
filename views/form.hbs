<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Node JS | Form</title>
    <!--Load bootstrap.css file-->
    <link rel="stylesheet" href="css/bootstrap.css"/>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="jumbotron">
            <form action="/post" method="post">
              <div class="form-group">
                <label>Masukan Nama</label>
                <input type="text" class="form-control" name="username" placeholder="nama anda">
              </div>

              <div class="form-group">
                <button type="reset" class="btn btn-danger" name="button">Reset</button>
                <button type="submit" class="btn btn-primary" name="button">Submit</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!--Load bootstrap.js file-->
    <script src="js/bootstrap.js"></script>
  </body>
</html>
